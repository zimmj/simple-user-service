{
  "name": "expess-web-api-skeleton",
  "version": "1.0.0",
  "description": "This is a skeleton app for an express web api server",
  "main": "app.js",
  "repository": "https://github.com/zimmj/expess-web-api-skeleton.git",
  "author": "Joel <zimmi.94@live.de>",
  "license": "MIT",
  "scripts": {
    "start": "ENV_FILE=./config/.env.prod node dist/app.js",
    "build": "tsc",
    "dev": "ENV_FILE=./config/.env.dev nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "test:unit": "ENV_FILE=./config/.env.test jest --coverage",
    "run:generate:migration": "drizzle-kit generate:pg --out src/db/migrations --schema src/db/schema.ts",
    "run:migration": "ENV_FILE=./config/.env.dev ts-node src/db/migrate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@types/dotenv-parse-variables": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.4.7",
    "@types/validator": "^13.9.0",
    "@types/yamljs": "^0.2.31",
    "connect": "^3.7.0",
    "dotenv-extended": "^2.9.0",
    "dotenv-parse-variables": "^2.0.0",
    "drizzle-orm": "^0.27.2",
    "drizzle-zod": "^0.4.4",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.0.4",
    "morgan": "^1.10.0",
    "morgan-body": "^2.6.9",
    "pg": "^8.11.2",
    "postgres": "^3.3.5",
    "swagger-routes-express": "^3.3.2",
    "swagger-ui-express": "^5.0.0",
    "typescript": "^5.1.6",
    "validator": "^13.11.0",
    "winston": "^3.10.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "drizzle-kit": "^0.19.12",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  }
}
